{
    "env": "remote",
    "data": {
        "data_path_local": "/home/altair/Documents/UROP/2025_Summer/Perceiver-diffusion-autoencoder/data",
        "models_path_local": "/home/altair/Documents/UROP/2025_Summer/Perceiver-diffusion-autoencoder/models",
        "data_path_remote": "/nobackup/users/allisone/UROP_2025_Summer/Perceiver-diffusion-autoencoder/data",
        "models_path_remote": "/nobackup/users/allisone/UROP_2025_Summer/Perceiver-diffusion-autoencoder/models",
        "test_name": "galah_20k",
        "lightcurve_test_name": "tess_20k",
        "spectra_test_name": "galah_20k"
    },
    "training": {
        "epoch": 100,
        "lr": 1e-3,
        "batch": 32,
        "save_every": 10,
        "aug": 1
    },
    "model": {
        "bottlenecklen": 4,
        "bottleneckdim": 4,
        "model_dim": 256,
        "encoder_heads": 4,
        "encoder_layers": 4,
        "concat": true,
        "fourier_embed": false,
        "mixer_selfattn": true,
        "spectra_tokens": 4,
        "photometry_tokens": 4,
        "dropping_prob": 0.2,
        "regularize": 0.0,
        
        "classifier_heads": 4,
        "classifier_layers": 2,
        "classifier_dropout": 0.1,
        "classifier_ffn_dim": 128,
        "num_classes": 10,
        
        "pretrained_encoder_path": "/path/to/pretrained/encoder.pth",
        "pretrained_spectra_tokenizer_path": "/path/to/pretrained/spectra_tokenizer.pth",
        "pretrained_photometry_tokenizer_path": "/path/to/pretrained/photometry_tokenizer.pth"
    },
    "checkpoint": {
        "load_checkpoint": false,
        "checkpoint_path": "/path/to/classifier/checkpoint.pth"
    },
    "distributed": {
        "init_method": "tcp://127.0.0.1:23456",
        "backend": "nccl"
    },
    "data_processing": {
        "num_workers": 1,
        "pin_memory": true
    },
    "testing": {
        "num_spectra": 5,
        "num_samples": 1,
        "num_examples": 3,
        "save_results": true,
        "batch_size": 8
    }
} 